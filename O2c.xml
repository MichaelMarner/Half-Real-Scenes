		<ProjectedText id="info1"      wall="left" x="60" y="250" color=" 255 255 255">Somewhere in South America</ProjectedText>
		<ProjectedText id="time1"      wall="left" x="60" y="233" color=" 255 255 255">20 years ago</ProjectedText>

		<ProjectedText id="poem1" wall="left" x="60" y="250" color="255 255 255">Absent! The morning when I go</ProjectedText>
		<ProjectedText id="poem2" wall="left" x="60" y="233" color="255 255 255">farther than the farthest, to the Mystery,</ProjectedText>
		<ProjectedText id="poem3" wall="left" x="60" y="216" color="255 255 255">as if following the inevitable line,</ProjectedText>
		<ProjectedText id="poem4" wall="left" x="60" y="199" color="255 255 255">your feet will slip toward the cemetery.</ProjectedText>

		<ProjectedText id="poem5" wall="left" x="60" y="250" color="255 255 255">Absent! And in your sufferings</ProjectedText>
		<ProjectedText id="poem6" wall="left" x="60" y="233" color="255 255 255">a wild pack of remorse and regrets</ProjectedText>
		<ProjectedText id="poem7" wall="left" x="60" y="216" color="255 255 255">will race past a weeping of bronzes.</ProjectedText>

		<ProjectedText id="info2"      wall="left" x="60" y="250" color=" 255 255 255">Violet's living room</ProjectedText>
		<ProjectedText id="info3"      wall="left" x="60" y="233" color=" 255 255 255">Night of the murder</ProjectedText>
		<ProjectedText id="time2"      wall="left" x="60" y="216" color=" 255 255 255">7:30pm</ProjectedText>

		<ProjectedText id="sub1" wall="left" x="60" y="250" color="255 255 255">I could hear footsteps...</ProjectedText>
		<ProjectedText id="sub2" wall="left" x="60" y="250" color="255 255 255">shouts and screams...</ProjectedText>
		<ProjectedText id="sub3" wall="left" x="60" y="250" color="255 255 255">Hercules Mendez stripped her naked.</ProjectedText>
		<ProjectedText id="sub4" wall="left" x="60" y="250" color="255 255 255">She fought.</ProjectedText>
		<ProjectedText id="sub5" wall="left" x="60" y="250" color="255 255 255">Two men held her legs apart.</ProjectedText>
		<ProjectedText id="sub6" wall="left" x="60" y="250" color="255 255 255">He laughed.</ProjectedText>
		<ProjectedText id="sub7" wall="left" x="60" y="250" color="255 255 255">Mendez did it.</ProjectedText>
		<ProjectedText id="sub8" wall="left" x="60" y="250" color="255 255 255">I watched.</ProjectedText>
		<ProjectedText id="sub9" wall="left" x="60" y="250" color="255 255 255">They dumped her into the bath.</ProjectedText>
		<ProjectedText id="sub10" wall="left" x="60" y="250" color="255 255 255">Get your wife to...</ProjectedText>
		<ProjectedText id="sub11" wall="left" x="60" y="250" color="255 255 255">write that up in the newspapers.</ProjectedText>
